# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# IntraService API Configuration
INTRASERVICE_BASE_URL=https://helpdesk.bunter.ru/api
INTRASERVICE_API_VERSION=5.42
INTRASERVICE_USER=your_api_user
INTRASERVICE_PASS=your_api_password
API_USER_ID=1

# Service IDs
SERVICE_ID_REMOTE_ACCESS=67
SERVICE_ID_MISC=61

# Remote Access Configuration
REMOTE_ACCESS_TYPE_ID=1022
REMOTE_ACCESS_PRIORITY_ID=17
REMOTE_ACCESS_WORKFLOW_ID=4

# Email/SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
SMTP_USE_TLS=true
SMTP_USE_SSL=false
CORP_EMAIL_DOMAIN=example.com

# OTP Configuration
OTP_EXPIRE_MINUTES=10
INSTRUCTIONS_OTP_EXPIRE_MINUTES=5

# File Restrictions Configuration
ALLOWED_FILE_EXTENSIONS=pdf,docx,doc,txt
FORBIDDEN_FILE_EXTENSIONS=png,jpg,jpeg,gif,bmp,tiff,webp,ico,svg,psd,ai,sketch
MAX_FILE_SIZE_MB=50
ENABLE_CONTENT_VALIDATION=true
SCREENSHOT_KEYWORDS=screenshot,screen,shot,скриншот,скрин,снимок

# Telegram Mini App Configuration (для внешнего доступа)
MINIAPP_URL=https://your-domain.com:4477/miniapp
MINIAPP_WEBHOOK_URL=https://your-domain.com:4477
MINIAPP_MODE=remote
LINK_EXPIRY_MINUTES=40

# Для ngrok (автоматически обновляется скриптом)
# MINIAPP_URL=https://abc123.ngrok.io/miniapp
# MINIAPP_WEBHOOK_URL=https://abc123.ngrok.io

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
INSTRUCTIONS_DIR=instructions
INSTRUCTIONS_CONFIG_FILE=instructions_config.json

# File Server Configuration
FILE_SERVER_BASE_URL=https://files.example.com
FILE_SERVER_USER=your_file_server_user
FILE_SERVER_PASS=your_file_server_password
FILE_SERVER_USE_AUTH=true

# Logging Configuration
LOG_DIR=./logs
LOG_FILE=./logs/bot.log

# Metrics Configuration
METRICS_PORT=9108

# Background Worker Configuration
BACKGROUND_POLL_INTERVAL_SEC=30