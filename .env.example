# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=mainnet  # mainnet или devnet
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Trading Configuration
ENABLE_REAL_TRADES=false  # Paper trading по умолчанию
WALLET_PRIVATE_KEY=your_private_key_here
MAX_POSITION_SIZE_USD=1000
MAX_DAILY_LOSS_USD=100
MIN_LIQUIDITY_USD=10000
MAX_SLIPPAGE_PERCENT=5.0

# Database Configuration
DATABASE_URL=postgresql://trading_bot:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0

# Risk Engine Configuration
MIN_TVL_USD=50000
MAX_FEE_PERCENT=3.0
ENABLE_HONEYPOT_CHECK=true
ENABLE_RUGPULL_CHECK=true
MAX_TAX_PERCENT=10.0

# Sniper Bot Configuration
SNIPER_ENABLED=true
SNIPER_MIN_LIQUIDITY_USD=10000
SNIPER_MAX_SLIPPAGE_PERCENT=3.0
SNIPER_QUICK_EXIT_PERCENT=2.0

# Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Rate Limits
JUPITER_RATE_LIMIT=100  # requests per minute
SOLANA_RPC_RATE_LIMIT=1000  # requests per minute